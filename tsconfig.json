{
  "include": ["web/**/*", "web/**/*.vue"],
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "noEmit": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./web/*"],
      "@pages/*": ["./web/pages/*"],
      "@stores/*": ["./web/stores/*"],
      "@components/*": ["./web/components/*"]
    }
  },
  "vueCompilerOptions": {
    "plugins": ["@volar/vue-language-plugin-pug"]
  }
}
